@model _10DataAnnotations.Models.Student

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken();
    @Html.ValidationSummary("", htmlAttributes: new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(student => student.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div classs="col-md-10">
            @Html.TextBoxFor(student => student.Name, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(student => student.Name, "", htmlAttributes: new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(student => student.TotalMarks, htmlAttributes: new { @class = "control-label col-md-2" })
        <div classs="col-md-10">
            @Html.TextBoxFor(student => student.TotalMarks, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(student => student.TotalMarks, "", htmlAttributes: new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(student => student.Email, htmlAttributes: new { @class = "control-label col-md-2" })
        <div classs="col-md-10">
            @Html.TextBoxFor(student => student.Email, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(student => student.Email, "", htmlAttributes: new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(student => student.Password, htmlAttributes: new { @class = "control-label col-md-2" })
        <div classs="col-md-10">
            @Html.PasswordFor(student => student.Password, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(student => student.Password, "", htmlAttributes: new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(student => student.ConfirmPassword, htmlAttributes: new { @class = "control-label col-md-2" })
        <div classs="col-md-10">
            @Html.PasswordFor(student => student.ConfirmPassword, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(student => student.ConfirmPassword, "", htmlAttributes: new { @class = "text-danger" })
        </div>
    </div>

    <input type="submit" value="Update" />



}

@section scripts
    {
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}





