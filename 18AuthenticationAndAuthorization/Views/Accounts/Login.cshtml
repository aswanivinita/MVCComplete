@model _18AuthenticationAndAuthorization.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Login";
}
.
<h2>
    Login
</h2>

@using (Html.BeginForm("Login", "Accounts", FormMethod.Post))
{
    @Html.AntiForgeryToken();
    @Html.ValidationSummary("", htmlAttributes: new { @class = "text-danger" })




    <div class="form-group">
        @Html.LabelFor(user => user.Email, htmlAttributes: new { @class = "control-label col-md-2" })
        <div classs="col-md-10">
            @Html.TextBoxFor(user => user.Email, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(user => user.Email, "", htmlAttributes: new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(user => user.Password, htmlAttributes: new { @class = "control-label col-md-2" })
        <div classs="col-md-10">
            @Html.PasswordFor(user => user.Password, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(user => user.Password, "", htmlAttributes: new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(user => user.RememberMe, htmlAttributes: new { @class = "control-label col-md-2" })
        <div classs="col-md-10">
            @Html.CheckBoxFor(user => user.RememberMe, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(user => user.RememberMe, "", htmlAttributes: new { @class = "text-danger" })
        </div>
    </div>



    <input type="submit" value="Login" />



}

@ViewBag.Error


