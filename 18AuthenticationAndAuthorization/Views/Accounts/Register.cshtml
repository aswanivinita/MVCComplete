@model _18AuthenticationAndAuthorization.Models.AppUser
@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>
@using (Html.BeginForm("Register", "Accounts", FormMethod.Post))
{
    @Html.AntiForgeryToken();
    @Html.ValidationSummary("", htmlAttributes: new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(user => user.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div classs="col-md-10">
            @Html.TextBoxFor(user => user.Name, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(user => user.Name, "", htmlAttributes: new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        @Html.LabelFor(user => user.Email, htmlAttributes: new { @class = "control-label col-md-2" })
        <div classs="col-md-10">
            @Html.TextBoxFor(user => user.Email, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(user => user.Email, "", htmlAttributes: new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(user => user.Password, htmlAttributes: new { @class = "control-label col-md-2" })
        <div classs="col-md-10">
            @Html.PasswordFor(user => user.Password, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(user => user.Password, "", htmlAttributes: new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(user => user.ConfirmPassword, htmlAttributes: new { @class = "control-label col-md-2" })
        <div classs="col-md-10">
            @Html.PasswordFor(user => user.ConfirmPassword, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(user => user.ConfirmPassword, "", htmlAttributes: new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(user => user.Roles, htmlAttributes: new { @class = "control-label col-md-2" })
        <div classs="col-md-10">
            @Html.DropDownListFor(user => user.Roles,
           new List<SelectListItem> {
           new SelectListItem {Text= "Admin", Value="Admin"},   
           new SelectListItem {Text= "Student", Value="Student"},
           new SelectListItem {Text= "Teacher", Value="Teacher"}
           },
           htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(user => user.Roles, "", htmlAttributes: new { @class = "text-danger" })
        </div>
    </div>

    <input type="submit" value="Register" />



}
